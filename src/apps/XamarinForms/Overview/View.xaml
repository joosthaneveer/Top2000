<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Chroomsoft.Top2000.Apps.Overview.View"
             xmlns:g="clr-namespace:Chroomsoft.Top2000.Apps.Common"
             Title="Overview"
             BackgroundColor="{DynamicResource PageBackgroundColor}"
             >
    <ContentPage.Content>
        <StackLayout Margin="0,25,0,0">
            <Button Text="Show Dates" Clicked="ShowDatesView" />
            <Button Text="Hides Dates" Clicked="HideDatesView" />
            <Button Text="Select Year" Clicked="Button_Clicked" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
